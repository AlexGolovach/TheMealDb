<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f4"
    app:layoutDescription="@xml/onboarding_landscape"
    app:showPaths="false">

    <View
        android:id="@+id/backgroundViewFirst"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/background_black_rounded" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/areaView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cuisine" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleViewFirst"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/areas" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subTitleViewFirst"
        style="@style/SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/first_onboarding_description" />

    <View
        android:id="@+id/backgroundViewSecond"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/background_black_rounded" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/categoriesView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/categories" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleViewSecond"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/categories" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subTitleViewSecond"
        style="@style/SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/second_onboarding_description" />

    <View
        android:id="@+id/backgroundViewThird"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/background_black_rounded" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ingredientsView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ingredients" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleViewThird"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ingredients" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subTitleViewThird"
        style="@style/SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/third_onboarding_description" />

    <View
        android:id="@+id/indicatorViewFirst"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:background="@drawable/background_indicator_disabled" />

    <View
        android:id="@+id/indicatorViewSecond"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:background="@drawable/background_indicator_disabled" />

    <View
        android:id="@+id/indicatorViewThird"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:background="@drawable/background_indicator_disabled" />

    <View
        android:id="@+id/indicatorViewActiveTop"
        android:layout_width="16dp"
        android:layout_height="4dp"
        android:background="@drawable/background_indicator_enabled_top" />

    <View
        android:id="@+id/indicatorViewActiveBottom"
        android:layout_width="16dp"
        android:layout_height="4dp"
        android:background="@drawable/background_indicator_enabled_bottom" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/get_started" />

</androidx.constraintlayout.motion.widget.MotionLayout>